<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_items2"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:paddingBottom="@dimen/large_margin_And_padding"
        android:paddingHorizontal="@dimen/standard_margin_And_padding"
        android:background="@drawable/background_bottomsheet">

        <View
            android:id="@+id/divider_groupMainPage_settings"
            android:layout_width="70dp"
            android:layout_height="3dp"
            android:layout_marginTop="4dp"
            android:background="@drawable/divider_vertical_style"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView_groupMainPage_settingsText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="@string/settings"
            android:textColor="@color/color_details_text"
            app:layout_constraintEnd_toEndOf="@+id/divider_groupMainPage_settings"
            app:layout_constraintStart_toStartOf="@+id/divider_groupMainPage_settings"
            app:layout_constraintTop_toBottomOf="@+id/divider_groupMainPage_settings" />

        <ImageView
            android:id="@+id/imageView7"
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:layout_marginTop="24dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView_groupMainPage_settingsText"
            app:srcCompat="@drawable/ic_music" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:text="@string/AutoPlayAudio"
            android:textSize="@dimen/Content_Text_Size"
            android:textColor="@color/white"
            app:layout_constraintBottom_toBottomOf="@+id/imageView7"
            app:layout_constraintStart_toEndOf="@+id/imageView7"
            app:layout_constraintTop_toTopOf="@+id/imageView7" />

        <Switch
            android:id="@+id/switch_GroupMainPage_AutoPlayAudio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:outlineSpotShadowColor="@color/grey_1"
            android:outlineAmbientShadowColor="@color/blue_dark"
            app:layout_constraintBottom_toBottomOf="@+id/textView"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/textView" />

        <ImageView
            android:id="@+id/imageView8"
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:layout_marginTop="24dp"
            app:layout_constraintEnd_toEndOf="@+id/imageView7"
            app:layout_constraintStart_toStartOf="@+id/imageView7"
            app:layout_constraintTop_toBottomOf="@+id/imageView7"
            app:srcCompat="@drawable/ic_see_more" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/skipOption"
            android:textSize="@dimen/Content_Text_Size"
            android:textColor="@color/white"
            app:layout_constraintBottom_toBottomOf="@+id/imageView8"
            app:layout_constraintStart_toStartOf="@+id/textView"
            app:layout_constraintTop_toTopOf="@+id/imageView8" />

        <Switch
            android:id="@+id/switch_GroupMainPage_SkipOption"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            android:outlineSpotShadowColor="@color/grey_1"
            android:outlineAmbientShadowColor="@color/blue_dark"
            app:layout_constraintBottom_toBottomOf="@+id/textView4"
            app:layout_constraintEnd_toEndOf="@+id/switch_GroupMainPage_AutoPlayAudio"
            app:layout_constraintTop_toTopOf="@+id/textView4" />

        <ImageView
            android:id="@+id/imageView9"
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:layout_marginTop="24dp"
            app:layout_constraintEnd_toEndOf="@+id/imageView8"
            app:layout_constraintStart_toStartOf="@+id/imageView8"
            app:layout_constraintTop_toBottomOf="@+id/imageView8"
            app:srcCompat="@drawable/ic_timer" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/Timer"
            android:textSize="@dimen/Content_Text_Size"
            android:textColor="@color/white"
            app:layout_constraintBottom_toBottomOf="@+id/imageView9"
            app:layout_constraintStart_toStartOf="@+id/textView4"
            app:layout_constraintTop_toTopOf="@+id/imageView9" />

        <Switch
            android:id="@+id/switch_GroupMainPage_Timer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            app:layout_constraintBottom_toBottomOf="@+id/textView7"
            app:layout_constraintEnd_toEndOf="@+id/switch_GroupMainPage_SkipOption"
            app:layout_constraintTop_toTopOf="@+id/textView7" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/TimerContent"
            android:textColor="@color/color_content_text"
            android:textSize="@dimen/details_Text_Size"
            android:lineSpacingMultiplier="1.2"
            app:layout_constraintEnd_toStartOf="@+id/switch_GroupMainPage_Timer"
            app:layout_constraintStart_toStartOf="@+id/textView7"
            app:layout_constraintTop_toBottomOf="@+id/textView7" />

        <ImageView
            android:id="@+id/iv_GroupMainPage_moreForTimer"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_marginTop="8dp"
            android:rotation="90"
            app:layout_constraintEnd_toEndOf="@+id/switch_GroupMainPage_Timer"
            app:layout_constraintStart_toStartOf="@+id/switch_GroupMainPage_Timer"
            app:layout_constraintTop_toBottomOf="@+id/textView8"
            app:srcCompat="@drawable/ic_next" />

        <TextView
            android:id="@+id/textView_GroupMainPage_TimerText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="12dp"
            android:text="10 s"
            android:textColor="@color/color_content_text"
            android:textSize="@dimen/details_Text_Size"
            app:layout_constraintBottom_toBottomOf="@+id/iv_GroupMainPage_moreForTimer"
            app:layout_constraintEnd_toStartOf="@+id/iv_GroupMainPage_moreForTimer"
            app:layout_constraintTop_toTopOf="@+id/iv_GroupMainPage_moreForTimer" />

        <View
            android:id="@+id/divider_BelowTimer"
            android:layout_width="0dp"
            android:layout_height="2dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/divider_style"
            app:layout_constraintEnd_toEndOf="@+id/textView8"
            app:layout_constraintStart_toStartOf="@+id/textView8"
            app:layout_constraintTop_toBottomOf="@+id/textView_GroupMainPage_TimerText" />

        <ImageView
            android:id="@+id/imageView11"
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:layout_marginTop="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/imageView9"
            app:layout_constraintStart_toStartOf="@+id/imageView9"
            app:layout_constraintTop_toBottomOf="@+id/divider_BelowTimer"
            app:srcCompat="@drawable/ic_favorite" />

        <TextView
            android:id="@+id/tv_GroupMainPage_FavoriteCards"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/favoriteCards"
            android:textSize="@dimen/Content_Text_Size"
            android:textColor="@color/white"
            app:layout_constraintBottom_toBottomOf="@+id/imageView11"
            app:layout_constraintStart_toStartOf="@+id/textView7"
            app:layout_constraintTop_toTopOf="@+id/imageView11" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>