<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android"
    >
<item
    android:height="500dp"
    android:width="400dp">
    <shape android:shape="rectangle">
        <padding android:left="100dp" android:bottom="80dp"/>
    </shape>
    </item>
        <item
            android:height="400dp"
            android:width="300dp"
            android:gravity="center">
        <shape android:shape="rectangle">
            <solid android:color="@color/background_items"/>
            <corners
                android:bottomLeftRadius="@dimen/dialog_radius"
                android:bottomRightRadius="@dimen/dialog_radius"
                android:topLeftRadius="@dimen/dialog_radius"/>
        </shape>
    </item>

    <item android:gravity="end|top">
        <shape android:shape="rectangle">
            <solid android:color="@color/background_items"/>
            <size android:height="30dp" android:width="30dp"/>

        </shape>
    </item>
</layer-list>